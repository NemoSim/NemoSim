<?xml version="1.0" encoding="UTF-8"?>
<NetworkConfig type="BIUNetwork">
	<BIUNetwork>
		<!-- Global defaults for multi-layer test -->
		<VTh>0.6</VTh>
		<RLeak>500e6</RLeak>
		<refractory>12</refractory>
		<DSClockMHz>10</DSClockMHz>
		<DSBitWidth>4</DSBitWidth>
		<DSMode>ThresholdMode</DSMode>
	</BIUNetwork>

	<Architecture>
		<!-- Layer 0: 3 neurons, input size = 8 -->
		<Layer size="3">
			<synapses rows="3" cols="8">
				<weights>
					<row>6 5 5 5 5 -5 5 5</row>
					<row>5 -5 5 5 -5 5 5 5</row>
					<row>4 5 5 -5 5 5 5 5</row>
				</weights>
			</synapses>
		</Layer>

		<!-- Layer 1: 7 neurons, input size = 3 -->
		<Layer size="7">
			<synapses rows="7" cols="3">
				<weights>
					<row>7.0 0.0 0.0</row>
					<row>0.0 7.0 0.0</row>
					<row>0.0 0.0 7.0</row>
					<row>7 7 0.0</row>
					<row>0 0 1</row>
					<row>3 0.0 3</row>
					<row>5 10 5</row>
				</weights>
			</synapses>
		</Layer>
	</Architecture>
</NetworkConfig>

