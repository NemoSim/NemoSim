<?xml version="1.0" encoding="UTF-8"?>
<NetworkConfig type="BIUNetwork">
	<BIUNetwork>
		<!-- Global defaults -->
		<VTh>0.5</VTh>
		<RLeak>550e6</RLeak>
		<refractory>10</refractory>
		<DSClockMHz>10</DSClockMHz>
		<DSBitWidth>8</DSBitWidth>
		<DSMode>ThresholdMode</DSMode>
	</BIUNetwork>

	<Architecture>
		<!-- Single layer with 5 neurons to demonstrate precedence -->
		<Layer size="5">
			<synapses rows="5" cols="5">
				<weights>
					<row>1 0 0 0 0</row>
					<row>0 1 0 0 0</row>
					<row>0 0 1 0 0</row>
					<row>0 0 0 1 0</row>
					<row>0 0 0 0 1</row>
				</weights>
			</synapses>

			<!-- Range for neurons 1..3 -->
			<NeuronRange start="1" end="3">
				<VTh>0.7</VTh>
				<RLeak>520e6</RLeak>
				<refractory>12</refractory>
			</NeuronRange>

			<!-- Most-specific override for neuron 3 (should override the range) -->
			<Neuron index="3">
				<VTh>0.65</VTh>
			</Neuron>
		</Layer>
	</Architecture>
</NetworkConfig>

